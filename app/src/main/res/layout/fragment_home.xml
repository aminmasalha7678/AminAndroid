<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientFragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/home_cardview_player"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:padding="4dp">

            <Button
                android:id="@+id/home_players_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="144dp"
                android:text="Check out!!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_players_text" />

            <TextView
                android:id="@+id/home_players_text"
                android:layout_width="401dp"
                android:layout_height="109dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="Check out ALL the players in the NBA and their stats"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="395dp"
                android:layout_height="53dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_horizontal"
                android:text="Players"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/home_cardview_team"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="310dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:padding="4dp">

            <Button
                android:id="@+id/home_teams_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="144dp"
                android:text="Check out!!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_teams_text" />

            <TextView
                android:id="@+id/home_teams_text"
                android:layout_width="401dp"
                android:layout_height="109dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="Check out ALL the Teams in the NBA and their stats"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="395dp"
                android:layout_height="53dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_horizontal"
                android:text="Teams"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/home_cardview_game"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="610dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:padding="4dp">

            <Button
                android:id="@+id/home_game_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="144dp"
                android:text="Check out!!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_game_text" />

            <TextView
                android:id="@+id/home_game_text"
                android:layout_width="401dp"
                android:layout_height="109dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="Make you Favorite Players OR Teams battle it out"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="395dp"
                android:layout_height="53dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_horizontal"
                android:text="Games"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>