<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminFragments.AdminHomeFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/admin_cardView_player"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:padding="4dp">

            <Button
                android:id="@+id/adminHome_viewPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="136dp"
                android:text="View Players"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adminHome_players" />

            <TextView
                android:id="@+id/adminHome_players"
                android:layout_width="401dp"
                android:layout_height="109dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="Here you can view all the players in the database and make changes to their data if needed"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="395dp"
                android:layout_height="53dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="Players"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="77dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_cardView_player">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:padding="4dp">

            <Button
                android:id="@+id/adminHome_viewTeams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="136dp"
                android:text="View Teams"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adminHome_teams" />

            <TextView
                android:id="@+id/adminHome_teams"
                android:layout_width="401dp"
                android:layout_height="109dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="Here you can view all the teams in the database and make changes to their data if needed"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="395dp"
                android:layout_height="53dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="Teams"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>