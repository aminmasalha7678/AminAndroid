<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminFragments.AdminHomeFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_player"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:padding="4dp">

            <Button
                android:id="@+id/game_one_vs_one"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="144dp"
                android:text="1 VS 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adminHome_players" />

            <TextView
                android:id="@+id/adminHome_players"
                android:layout_width="401dp"
                android:layout_height="109dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="Make your favorite players face off in a 1 vs 1 battle and see who is the best"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="395dp"
                android:layout_height="53dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_horizontal"
                android:text="1 VS 1"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_team"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="77dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_player">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:padding="4dp">

            <Button
                android:id="@+id/game_team_battle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="140dp"
                android:text="Team Battle!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adminHome_teams" />

            <TextView
                android:id="@+id/adminHome_teams"
                android:layout_width="401dp"
                android:layout_height="109dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="Make your favorite teams face off in a team battle and see who is the best"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="395dp"
                android:layout_height="53dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="Team VS Team"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>